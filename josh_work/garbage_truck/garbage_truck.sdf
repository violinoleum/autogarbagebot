<?xml version="1.0" ?>
<sdf version="1.10">
  <model name="garbage_truck">
    <static>false</static>

    <!-- Chassis -->
    <link name="chassis">
      <pose>0 0 1 0 0 0</pose>
      <inertial>
        <mass>1500</mass>
        <inertia>
          <ixx>500</ixx> <iyy>1200</iyy> <izz>1000</izz>
          <ixy>0</ixy> <ixz>0</ixz> <iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="chassis_collision">
        <geometry>
          <box>
            <size>4 2 1.5</size>
          </box>
        </geometry>
      </collision>
      <visual name="chassis_visual">
        <geometry>
          <box>
            <size>4 2 1.5</size>
          </box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Green</name>
          </script>
        </material>
      </visual>
    </link>

    <!-- Wheels -->
    <link name="wheel_front_left">
      <pose>-1.5 1.1 0.25 -1.5707 0 0</pose>
      <inertial>
        <mass>20</mass>
      </inertial>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.5</radius>
            <length>0.3</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.5</radius>
            <length>0.3</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint name="joint_wheel_front_left" type="revolute">
      <parent>chassis</parent>
      <child>wheel_front_left</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1.57</lower>
          <upper>1.57</upper>
        </limit>
      </axis>
    </joint>

    <link name="wheel_front_right">
      <pose>-1.5 -1.1 0.25 -1.5707 0 0</pose>
      <inertial>
        <mass>20</mass>
      </inertial>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.3</radius>
            <length>0.5</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.5</radius>
            <length>0.3</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint name="joint_wheel_front_right" type="revolute">
      <parent>chassis</parent>
      <child>wheel_front_right</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1.57</lower>
          <upper>1.57</upper>
        </limit>
      </axis>
    </joint>

    <link name="wheel_back_left">
      <pose> 1.5 1.1 0.25 -1.5707 0 0</pose>
      <inertial>
        <mass>20</mass>
      </inertial>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.5</radius>
            <length>0.3</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.5</radius>
            <length>0.3</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint name="joint_wheel_back_left" type="revolute">
      <parent>chassis</parent>
      <child>wheel_back_left</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1.57</lower>
          <upper>1.57</upper>
        </limit>
      </axis>
    </joint>

    <link name="wheel_back_right">
      <pose> 1.5 -1.1 0.25 -1.5707 0 0</pose>
      <inertial>
        <mass>20</mass>
      </inertial>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.5</radius>
            <length>0.3</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.5</radius>
            <length>0.3</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint name="joint_wheel_back_right" type="revolute">
      <parent>chassis</parent>
      <child>wheel_back_right</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1.57</lower>
          <upper>1.57</upper>
        </limit>
      </axis>
    </joint>

    <!-- Define a link for the front camera -->
    <link name="camera_link">
      <pose>0 0 1.5 0 0 0</pose>  <!-- Adjust position (x y z roll pitch yaw) -->

      <sensor name="front_camera" type="camera">
        <always_on>true</always_on>
        <update_rate>30</update_rate>  <!-- 30 FPS -->
        <camera>
          <horizontal_fov>1.57</horizontal_fov>  <!-- Field of View (90 degrees) -->
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
        </camera>
        <plugin name="camera_plugin" filename="libgazebo_ros_camera.so">
          <ros>
            <namespace>/garbage_truck</namespace>
            <remapping>image_raw:=camera/image_raw</remapping>
          </ros>
        </plugin>
      </sensor>
    </link>

  </model>
</sdf>
